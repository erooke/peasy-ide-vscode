{
  "name": "p-extension",
  "displayName": "P Extension",
  "description": "P Extension provides compilation support, a custom theme, syntax highlighting, a testing framework",
  "publisher": "P_Team",
  "version": "0.0.1",
  "icon": "p-icon.png",
  "engines": {
    "vscode": "^1.78.0"
  },
  "activationEvents": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/p-org/peasy-ide-vscode.git"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "taskDefinitions": [
      {
          "type": "Errors", 
          "required": ["background"],
          "properties": {
            "background": {
              "type":"object", 
              "description": "background format"
            }
          }
      }
    ],
    "problemMatchers": [
      {
        "name": "Type",
        "fileLocation": ["search", {"include": ["${workspaceFolder}"]}],
        "pattern": [
          {
              "regexp": "(?:\\[Error:\\])"
          }, 
          {
              "regexp": "\\[([a-zA-Z\\/\\.]+):([0-9]+):([0-9]+)\\](.*)", 
              "file": 1,
              "line": 2,
              "column": 3, 
              "message": 4
          }
        ], 
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Parsing",
          "endsPattern": "~"
        }

      }, 
      {
        "name": "Parse",
        "fileLocation": ["search", {"include": ["${workspaceFolder}"]}],
        "pattern": [
          {
              "regexp": "(?:\\[Parser Error:\\])"
          }, 
          {
              "regexp": "\\[(.*)\\]\\s+(?:parse error:)\\s+(?:line\\s+)([0-9]+)\\:([0-9]+)(.+)", 
              "file": 1,
              "line": 2,
              "column": 3, 
              "message": 4
          }
          ], 
          "background": {
            "activeOnStart": true,
            "beginsPattern": "Parsing",
            "endsPattern": "~"
          }
      }
    ],
    "themes": [
      {
        "label": "P's Custom Theme",
        "uiTheme": "vs-dark",
        "path": "./themes/P Theme-color-theme.json"
      }
    ], 
    "keybindings": [
      {
        "command": "workbench.action.tasks.runTask",
        "args": "Run_Report",
        "key": "f5", 
        "mac": "f5"
      }
    ],
    "configuration": {
      "type": "object", 
      "title": "P Extension configuration", 
      "properties": {
        "p-vscode.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off", 
            "messages",
            "verbose"
          ],
          "default": "verbose",
          "description": "Traces the communication between VS Code and the language server."
        }, 
        "p-vscode.iterations": {
          "scope": "window",
          "type": "integer",
          "default": 1000,
          "description": "Manages the number of iterations run during P testing at a 'p check' command."
        }
      }
    },
    "commands": [
      {
        "command": "p.definition",
        "title": "P: Go to Definition"
      }, 
      {
        "command": "workbench.errors",
        "title": "Error"
      }
    ], 

    "languages": [
      {
        "id": "p",
        "aliases": [
          "P",
          "p"
        ],
        "extensions": [
          ".p", 
          ".pproj"

        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "p",
        "scopeName": "source.p",
        "path": "./syntaxes/p.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "p",
        "path": "./snippets/snippets.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm install && webpack",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.78.0",
    "@types/which": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.39.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.4",
    "webpack": "^5.81.0",
    "webpack-cli": "^5.0.2"
  },
  "dependencies": {
    "cross-fetch": "^3.1.6",
    "extract-zip": "^2.0.1",
    "vscode-languageclient": "^8.1.0",
    "vscode-uri": "^3.0.7",
    "which": "^3.0.1",
    "which-module": "^2.0.1"
  }
}
